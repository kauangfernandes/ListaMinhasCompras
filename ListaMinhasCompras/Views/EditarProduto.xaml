<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaMinhasCompras.Views.EditarProduto"
             Title="Editar Produto">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id: " />
            <Label Text="{Binding Id}" />

            <Label Text="Descrição: " />
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}" />

            <Label Text="Preco: " />
            <Entry x:Name="txt_preco" Text="{Binding Preco}" />

            <Label Text="Quantidade: " />
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}" Keyboard="Numeric"/>

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>